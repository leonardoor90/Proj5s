        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

        <link href="css/style.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="/estilos/estilos.css">                                                                                                      
    </head>
    <body>
        <header>
            <nav id="menuPrincipal">
                <ul>
                    <li><a href="/">Início</a></li>
                    <li><a href="/produtos">Voltar</a></li>
                    <li><a href="/produtos/novo">Novo Produto</a></li>
                </ul>
            </nav>
        </header>

        <br><br>

        <div id="container" class="col-md-8">
            <div>
                <h1>Cadastrar Novo Produto</h1>
                <form action="/produtos/salvar" method="post"> 
                <div class="form-group">
                    <label for="exampleFormControlInput1">Código</label>
                    <input type="text" name="pro_codigo" value="" class="form-control" readonly>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Descrição</label>
                    <input type="text" name="pro_descricao" value="" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Custo</label>
                    <input type="text" class="form-control" name="pro_custo" value="">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Venda</label>
                    <input type="text" class="form-control" name="pro_venda" value="">
                </div>              
                
                <div class="row">
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary btn-block">Salvar </button>                    
                    </div>
                    <div class="col-md-3">
                        <a class="btn btn-danger btn-block" href="/produtos">Voltar</a>
                    </div>
                </div>
                
                </form>
            </div>
        </div>

